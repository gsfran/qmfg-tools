{% extends 'layout.html.jinja' %}
{% block content %}
<div class="card card-style mb-2 col-md-12 col-lg-10 col-xl-8" style="max-width: 720px;">
    <h2 class="card-title">Park Work Order</h2>
    <div class="main-block card-body" style="display: inline-flex;">
    <form action="" method="POST" style="width: 100%;" novalidate>
            {{ form.hidden_tag() }}
            <fieldset class="form-group">
                <table class="table">
                    <style>
                        .left_col {
                            width: 40%;
                            font-weight: bolder;
                        }
                        .right_col {
                            text-align: right;
                        }
                    </style>
                    <tbody>
                        <tr>
                            <td class="left_col no_border">
                                <!-- CANCEL -->
                                <a href="{{ url_for('view_work_order', lot_number=work_order.lot_number) }}">
                                    <div class="btn btn-outline-dark btn-lg" style="width: 100%;">
                                        Cancel
                                    </div>
                                </a>
                            </td>
                            <td class="right_col no_border">
                                <!-- SUBMIT -->    
                                    {{ form.submit(class="btn btn-warning btn-lg", style="width: 100%") }}
                                {# </div> #}
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div style="margin-top: 60px;">
                                    <h2>{{ work_order.short_name }} {{ work_order.lot_id }}</h2>
                                </div>
                            </td>
                        </tr>
                        <tr style="height: 32px; background-color: var(--{{ work_order.product }}); border-radius: 15px;">
                            <td class="right_col"></td>
                            <td style="color: #fff; text-align: right; font-weight: bold;">{{ work_order.product_name }}</td>
                        </tr>
                        <tr style="height: 32px">    
                            <td class="left_col"></td>
                            <td class="right_col">
                            </td>
                        </tr>
                        <tr>
                            <td class="left_col">Status</td>
                            <td class="right_col">{{ work_order.status }}</td>
                        </tr>
                        <tr>
                            <td class="left_col">Strip / Pouch Lot #</td>
                            <td class="right_col">{{ work_order.strip_lot_number }} / {{ work_order.lot_number }}
                            </td>
                        </tr>
                        <tr>
                            <td class="left_col">Created</td>
                            <td class="right_col">
                                {{ work_order.created_dt.strftime('%I:%M%p %a, %b %d %Y') }}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}