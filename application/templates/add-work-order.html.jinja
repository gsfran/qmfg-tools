{% extends 'layout.html.jinja' %}
{% block content %}
<div class="card card-style mb-2 col-sm-10 col-md-8 col-lg-6" style="max-width: 540px;">
    <h3>Add Work Order</h3>
    <div class="card-body">
        <form action="" method="POST" novalidate>
            {{ form.hidden_tag() }}
            <fieldset class="form-group">

                <!-- PRODUCT TYPE FIELD -->
                <div class="form-group">
                    {{ form.product.label(class="form-control-label") }}
                    {{ form.product(class="form-control form-control-md") }}
                </div>
                
                {% if False %}
                <!-- PRODUCT INFO MODAL -->
                <div id="product-info" class="other-modal window">
                    <h4>Product Info</h4>
                        <!-- PRODUCT NAME -->
                        <div class="form-group">
                            {{ form.name.label(class="form-control-label") }}
                            {% if form.name.errors %}
                                {{ form.name(class="form-control form-control-sm is-invalid") }}
                                {% for error in form.name.errors %}
                                    <div class="invalid-feedback">
                                        <span>{{ error }}</span>
                                    </div>
                                {% endfor %}
                            {% else %}
                                {{ form.name(class="form-control form-control-sm") }}
                            {% endif %}
                        </div>

                        <!-- ITEM NUMBER -->
                        <div class="form-group">
                            {{ form.item_number.label(class="form-control-label") }}
                            {% if form.item_number.errors %}
                                {{ form.item_number(class="form-control form-control-sm is-invalid") }}
                                {% for error in form.item_number.errors %}
                                    <div class="invalid-feedback">
                                        <span>{{ error }}</span>
                                    </div>
                                {% endfor %}
                            {% else %}
                                {{ form.item_number(class="form-control form-control-sm") }}
                            {% endif %}
                        </div>

                        <!-- STD RATE -->
                        <div class="form-group">
                            {{ form.rate.label(class="form-control-label") }}
                            {% if form.rate.errors %}
                                {{ form.rate(class="form-control form-control-sm is-invalid") }}
                                {% for error in form.rate.errors %}
                                    <div class="invalid-feedback">
                                        <span>{{ error }}</span>
                                    </div>
                                {% endfor %}
                            {% else %}
                                {{ form.rate(class="form-control form-control-sm") }}
                            {% endif %}
                        </div>

                        <!-- SUBMIT -->
                        <div class="form-group border-bottom pb-3" style="margin-top: 50px;">
                            {{ form.other.form.submit(class="btn btn-outline-info", style="width: 100%")}}
                        </div>

                    <!-- CANCEL -->
                    <a href="#" title="Cancel">
                        <div class="other-modal-close">
                            Cancel
                        </div>
                    </a>
                </div>
                <!-- END MODAL -->
                {% endif %}

                <!-- LOT ID FIELD -->
                <div class="form-group">
                    {{ form.lot_id.label(class="form-control-label") }}
                    {% if form.lot_id.errors %}
                        {{ form.lot_id(class="form-control form-control-sm is-invalid") }}
                        {% for error in form.lot_id.errors %}
                            <div class="invalid-feedback">
                                <span>{{ error }}</span>
                            </div>
                        {% endfor %}
                    {% else %}
                        {{ form.lot_id(class="form-control form-control-sm") }}
                    {% endif %}
                </div>

                <!-- LOT NUMBER FIELD -->
                <div class="form-group">
                    {{ form.lot_number.label(class="form-control-label") }}
                    {% if form.lot_number.errors %}
                        {{ form.lot_number(class="form-control form-control-sm is-invalid") }}
                        {% for error in form.lot_number.errors %}
                            <div class="invalid-feedback">
                                <span>{{ error }}</span>
                            </div>
                        {% endfor %}
                    {% else %}
                        {{ form.lot_number(class="form-control form-control-sm") }}
                    {% endif %}
                </div>

                <!-- STRIP LOT NUMBER FIELD -->
                <div class="form-group">
                    {{ form.strip_lot_number.label(class="form-control-label") }}
                    {% if form.strip_lot_number.errors %}
                        {{ form.strip_lot_number(class="form-control form-control-sm is-invalid") }}
                        {% for error in form.strip_lot_number.errors %}
                            <div class="invalid-feedback">
                                <span>{{ error }}</span>
                            </div>
                        {% endfor %}
                    {% else %}
                        {{ form.strip_lot_number(class="form-control form-control-sm") }}
                    {% endif %}
                </div>

                <!-- STRIP QUANTITY FIELD -->
                <div class="form-group">
                    {{ form.strip_qty.label(class="form-control-label") }}
                    {% if form.strip_qty.errors %}
                        {{ form.strip_qty(class="form-control form-control-sm is-invalid") }}
                        {% for error in form.quantity.errors %}
                            <div class="invalid-feedback">
                                <span>{{ error }}</span>
                            </div>
                        {% endfor %}
                    {% else %}
                        {{ form.strip_qty(class="form-control form-control-sm") }}
                    {% endif %}
                </div>

                <!-- SUBMIT BUTTON -->
                <div class="form-group border-bottom pb-3" style="margin-top: 50px;">
                    {{ form.submit(class="btn btn-outline-info", style="width: 100%") }}
                </div>
                
                <div>
                    <a href="{{ url_for('index') }}"
                            class="btn btn-outline-secondary" style="width: 100%">Cancel</a>
                </div>

            </fieldset>
        </form>
    </div>
</div>
{% endblock %}